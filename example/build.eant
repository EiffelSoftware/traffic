<?xml version="1.0"?>

<project name="example" default="help">

	<description>
		description: "Eiffel Ant file for traffic applications"
		copyright: "Copyright (c) 2001, Michela Pedroni, Ursina Caluori and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<target name="help">
		<echo message="usage:"/>
		<echo message="   geant clean"/>
		<echo message="   geant clobber"/>
		<echo message="   geant install"/>
		<echo message="   geant install_develop"/>
		<echo message="   geant compile"/>
		<echo message="   geant release"/>
	</target>

	<target name="clean" depend="init">
		<description>
			Remove intermediary generated files.
		</description>

		<set name="target" value="clean"/>
		<geant target="do_all"/>
	</target>

	<target name="clobber" depend="init">
		<description>
			Remove all generated files.
		</description>

		<set name="target" value="clobber"/>
		<geant target="do_all"/>
	</target>

	<target name="install" depend="init">
		<set name="target" value="install"/>
		<geant target="do_all"/>
	</target>

	<target name="install_develop" depend="init">
		<set name="target" value="install_develop"/>
		<geant target="do_all"/>
	</target>

	<target name="compile" depend="init">
		<description>
			Compile examples.
		</description>

		<set name="target" value="compile"/>
		<geant target="do_all"/>
	</target>
	
	<target name="compile_debug" depend="init">
		<description>
			Compile examples.
		</description>

		<set name="target" value="compile_debug"/>
		<geant target="do_all"/>
	</target>
	
	<target name="release" depend="init">
		<description>
			Move xml files, 3d obj files, and all examples to release.
		</description>
		
		<mkdir directory="../release/example"/>
		<copy to_directory="../release/example/map">
    		<fileset directory="map" include="@(**/*.dtd|**/*.xml)"/>
  		</copy>
		<copy to_directory="../release/example/buildings">
    		<fileset directory="buildings" include="@(**/*.obj|**/*.tga|**/*.dtd|**/*.xml)"/>
  		</copy>
		<copy to_directory="../release/example/image">
    		<fileset directory="image" include="@(**/*.png)"/>
  		</copy>
		<copy to_directory="../release/example/objects">
    		<fileset directory="objects" include="@(**/*.obj|**/*.tga)"/>
  		</copy>
		<set name="target" value="release"/>
		<geant target="do_all"/>
	</target>

<!-- Implementation -->

	<target name="init">
	</target>
	
	<target name="do_one" export="NONE">
		<description>
			Call 'geant' with the same target ${target}
			and put out message.
		</description>
		<argument name="a_directory"/>
		<set name="a_dir" value="${a_directory}"/>
		<geant file="build.eant" target="${target}" dir="${a_dir}"/>
			<echo message="   successfully ${target}ed: application  $a_dir"/>
	</target>

	<target name="do_all">
		<geant target="do_one" arguments="flat_hunt"/>
		<geant target="do_one" arguments="city_3d"/>
		<geant target="do_one" arguments="city_timetable"/>
		<geant target="do_one" arguments="city_time"/>
		<geant target="do_one" arguments="chapter2_preview"/>
		<geant target="do_one" arguments="chapter3_queries"/>
		<geant target="do_one" arguments="chapter3_commands"/>
	</target>

</project>

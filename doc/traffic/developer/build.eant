<?xml version="1.0"?>

<project name="developer_guide" default="help">

	<description>
		description: "Developer documentation for Traffic"
		date: "$Date: 2005/10/20 03:22:06 $"
		revision: "$Revision: 1.1 $"
	</description>

	<inherit>
		<parent location="../../misc/build_function.eant">
			<redefine target="init"/>
			<redefine target="do_all"/>
		</parent>
	</inherit>

	<target name="init" export="NONE">
		<description>
			Init all needed Projectvariables
		</description>
		<set name="root_path" value="../../"/>
		<set name="doc_section" value="traffic library"/>
	</target>

	<target name="do_all" export="NONE">
		<description>
			Call 'geant' with the same target ${target}
			without subdirectories.
		</description>
		
		<geant target="${target}" arguments="map_overview"/>
		<geant target="${target}" arguments="map_classes"/>
		<geant target="${target}" arguments="visualization_overview"/>
		<geant target="${target}" arguments="visualization_classes"/>
		<geant target="${target}" arguments="input_overview"/>
		<geant target="${target}" arguments="input_classes"/>
		<geant target="${target}" arguments="index"/>	
	</target>

</project>